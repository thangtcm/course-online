@model IEnumerable<IIG_School.Models.Product>

@{
    ViewData["Title"] = "Danh sách sản phẩm";
}

<div class="pagetitle">
    <h1>Dashboard</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="HomeAdmin">Home</a></li>
            <li class="breadcrumb-item active">@ViewData["Title"]</li>
        </ol>
        <a asp-controller="Products" asp-action="Create" class="btn btn-primary">Create</a>
    </nav>
</div><!-- End Page Title -->
<section class="section dashboard">
    <div class="row">
        <!-- Top Selling -->
        <div class="col-12">
            <div class="card top-selling overflow-auto">

                <div class="filter">
                    <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                        <li class="dropdown-header text-start">
                            <h6>Filter</h6>
                        </li>

                        <li><a class="dropdown-item" href="#">Today</a></li>
                        <li><a class="dropdown-item" href="#">This Month</a></li>
                        <li><a class="dropdown-item" href="#">This Year</a></li>
                    </ul>
                </div>

                <div class="card-body pb-0">
                    <h5 class="card-title">Top Selling <span>| Today</span></h5>

                    <table class="table table-borderless datatable">
                        <thead>
                            <tr>
                                <th scope="col">Preview</th>
                                <th scope="col">Product</th>
                                <th scope="col">Price</th>
                                <th scope="col">Sale</th>
                                <th scope="col">Ammount</th>
                                <th scope="col">Revenue</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model) {
                                <tr>
                                <th scope="row"><a href="#">
                                    <img src="~/Image/@Html.DisplayFor(modelItem => item.ImageName)" alt="Uploaded Image" accept="image/png, image/jpeg"/>
                                </th>
                                <td><a href="#" class="text-primary fw-bold">@Html.DisplayFor(modelItem => item.ProductName)</a></td>
                                <td>$@item.ProductPrice</td>
                                <td>@item.ProductSale</td>
                                <td class="fw-bold">@Html.DisplayFor(modelItem => item.Inventory)</td>
                                <td>$@(item.ProductPrice - item.ProductSale)</td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div><!-- End Top Selling -->
    </div>
</section>

